{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-sass-guidelines"
  ],
  "plugins": [],
  "processors": [],
  "rules": {
    "selector-class-pattern": [
      "^[a-z]([-]?[a-z0-9]+)*(__[a-z0-9]([-]?[a-z0-9]+)*)?((--[a-z0-9]([-]?[a-z0-9]+)*){2})?$",
      {
        "message": "Class names should match the BEM hyphenated naming convention"
      }
    ],
    "max-nesting-depth": "3"
  }
}
